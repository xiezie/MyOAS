<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<!-- 映射对应的 package -->
<hibernate-mapping package="com.szunicom.myoas.bean">
    <!-- 实体类和数据库中的表对应（如果没有这个表则新建） -->
    <class name="Privilege" table="oa_role">
        <!-- id主键 和其他属性对应表中相应的字段（这些都是在 User.java 实体类中定义的） -->
        <id name="id">
        	<generator class="native"></generator>
        </id>
        <property name="name" ></property>
        <property name="url" ></property>
        
        <!--   children属性 Privilege类与Privilege类的（下级）的一对多的关系 -->
        <set name="children" table="oa_user_role" cascade="delete" order-by="id ASC">
        	<key column="parentId"></key>
        	<one-to-many  class="Privilege"/>
        </set>
        
        <!--   parent属性 Department类与Department（上级）的多对一的关系 -->
        <many-to-one name="parent" class="Privilege" column="parentId"></many-to-one>
        
        <!--   roles属性 Privilege类与Role类的多对多的关系 -->
        <set name="roles" table="oa_role_privilege">
        	<key column="privilegeId"></key>
        	<many-to-many class="Role" column="roleId"></many-to-many>
        </set>
    </class>
</hibernate-mapping>